<ShowImageScreen>:
    name: 'show_image'
    obj_image: imagetag
    obj_lbl_print_copies: lbl_copies_tag
    pos_x: 5000

    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        AsyncImage:
            id: imagetag
            source: 'resources/empty.jpg'

        BoxLayout:
            size_hint: 0.4, 0.1
            spacing: 10
            padding: 10


            orientation: 'horizontal'
            pos: (root.pos_x, 0)


            canvas.before:
                Color:
                    rgb: root.r, root.g, root.b, 0.7
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: '-'
                background_color: root.r, root.g, root.b, .5
                size_hint_x: 0.3
                on_press: lbl_copies_tag.text = str(int(lbl_copies_tag.text) - 1) if int(lbl_copies_tag.text) > 1 else '1'
            Label:
                id: lbl_copies_tag
                text: '1'
                size_hint_x: 0.3

                canvas.before:
                    Color:
                        rgb: root.r, root.g, root.b, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Button:
                text: '+'
                background_color: root.r, root.g, root.b, .5
                size_hint_x: 0.3
                on_press: lbl_copies_tag.text = str(int(lbl_copies_tag.text) + 1) if int(lbl_copies_tag.text) < 5 else '5'

            Widget:
                size_hint_x: None
                thickness: 10
                margin: 0
                width: self.thickness + 2 * self.margin
                canvas:
                    Color:
                        rgb: root.r, root.g, root.b
                    Rectangle:
                        pos: self.x + self.margin + 1, self.y + self.margin
                        size: self.thickness, self.height - 2 * self.margin

            Button:
                text: 'Drucken'
                background_color: root.r, root.g, root.b, .5
                on_press: root.print_image()

            Widget:
                size_hint_x: None
                thickness: 20
                margin: 0
                width: self.thickness + 2 * self.margin
                canvas:
                    Color:
                        rgb: root.r, root.g, root.b
                    Rectangle:
                        pos: self.x + self.margin + 1, self.y + self.margin
                        size: self.thickness, self.height - 2 * self.margin

            Button:
                text: 'Abbrechen'
                background_color: root.r, root.g, root.b, .5
                on_press: root.abort_print_dialog()
