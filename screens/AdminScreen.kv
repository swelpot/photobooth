<Separator@Widget>
    size_hint_y: None
    thickness: 2
    margin: 2
    height: self.thickness + 2 * self.margin
    color: 1., .0, .0
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.width - 2 * self.margin , self.thickness

<ButtonBottom@Button>
    size_x: 200
    size_hint_y: 1

<ButtonRight@Button>
    size_hint_x: 1
    size_hint_y: 0.1

<LabelRight@Label>
    size_hint_x: 1
    size_hint_y: .1
    text_size: self.size
    halign: 'left'

<AdminScreen>:
    name: 'admin'
    attr_text_log: ''
    attr_ip: 'xxx.xxx.xxx.xxx'
    attr_imgtarget: '/home/sysop/photos'
    attr_camera_status: 'ready'
    obj_scroll_view: id_scroll_view

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        size_hint_x: 1
        size_hint_y: 1
        spacing: 20
        padding: 20

        ScrollView:
            id: id_scroll_view
            size_hint_x: .7
            size_hint_y: .8
            scroll_y: 0

            Label:
                text: root.attr_text_log
                font_size: 18
                halign: 'left'
                valign: 'top'
                #size_x: 1
                #size_y: 1

                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint_x: 1
        size_hint_y: 1

        BoxLayout:
            spacing: 20
            padding: 20
            size_hint_y: 0.2


            ButtonBottom:
                text: 'GÃ¤stebuch-Modus'
                size_hint_y: 1
                on_press: root.switch_mode('guestbook')
            ButtonBottom:
                text: 'Party-Modus'
                size_hint_y: 1
                on_press: root.switch_mode('party')

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        size_hint_x: 1
        size_hint_y: 1

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 20
            size_hint_x: 0.3
            size_hint_y: 0.8

            ButtonRight:
                text: 'Shutdown'
                on_press: root.shutdown()
            ButtonRight:
                text: 'Reboot'
                on_press: root.reboot()
            Separator:
                color: .0, 1., .0
            LabelRight:
                text: 'IP ' + root.attr_ip
            LabelRight:
                text: 'Target: ' + root.attr_imgtarget
            LabelRight:
                text: 'IMG-Target: 30% full'
            LabelRight:
                text: 'Camera: ' + root.attr_camera_status
            LabelRight:
                text: 'SD-Card: 60% full'
            LabelRight:
                text: 'Required Camera Settings'
            LabelRight:
                text: 'Manual Focus'
            LabelRight:
                text: 'Program M'
