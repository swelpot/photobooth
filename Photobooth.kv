<ShowImageScreen>:
    name: 'show_image'
    image_path: imagetag

    AsyncImage:
        id: imagetag
        source: 'resources/empty.jpg'

<LoopVideoScreen>:
    name: 'loop_video'
    video_loop: videotag

    Video:
        id: videotag
        source: 'resources/empty.mp4'
        #fullscreen: True
        allow_fullscreen: True
        state: 'play'
        options: {'eos': 'loop', 'fullscreen': True, 'allow_stretch': True}

<ButtonPressedScreen>:
    name: 'button_pressed'
    video_buttonpressed: videotag

    Video:
        id: videotag
        source: 'resources/empty.mp4'
        #fullscreen: True
        allow_fullscreen: True
        state: 'pause'
        options: {'eos': 'stop', 'fullscreen': True, 'allow_stretch': True}
