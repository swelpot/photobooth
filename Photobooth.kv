<ScreenManagement>:
    canvas.before:
        Color:
            rgb: self.r, self.g, self.b
        Rectangle:
            pos: self.pos
            size: self.size

<LoopVideoScreen>:
    name: 'loop_video'
    video_loop: videotag

    Video:
        id: videotag
        source: 'resources/empty.mp4'
        #fullscreen: True
        allow_fullscreen: True
        state: 'play'
        options: {'eos': 'loop', 'fullscreen': True, 'allow_stretch': True}

<ButtonPressedScreen>:
    name: 'button_pressed'
    video_buttonpressed: videotag

    Video:
        id: videotag
        source: 'resources/empty.mp4'
        #fullscreen: True
        allow_fullscreen: True
        state: 'pause'
        options: {'eos': 'stop', 'fullscreen': True, 'allow_stretch': True}
