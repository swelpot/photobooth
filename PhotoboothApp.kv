#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition

<Button>:
    font_size: 40
	color: 0,1,0,1
	size_hint: 0.3, 0.2 

<ShowImageScreen>:
    name: 'show_image'
    image_path: imagetag

    AsyncImage:
        id: imagetag
        source: 'dummies/dummy.jpg'

<LoopVideoScreen>:
    name: 'loop_video'
    video_loop: videotag

    FloatLayout:
        Button:
            text: "Kivy"
            pos_hint: {"x": 0, 'y':0}
	    on_press: button_pressed()
        Video:
            id: videotag
            source: 'dummies/dummy.mp4'
            #fullscreen: True
            allow_fullscreen: True
            state: 'play'
            options: {'eos': 'loop', 'fullscreen': True, 'allow_stretch': True}

<ButtonPressedScreen>:
    name: 'button_pressed'
    video_buttonpressed: videotag

    Video:
        id: videotag
        source: 'dummies/dummy.mp4'
        #fullscreen: True
        allow_fullscreen: True
        state: 'pause'
        options: {'eos': 'stop', 'fullscreen': True, 'allow_stretch': True}
