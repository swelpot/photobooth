<ShowImageScreen2>:
    name: 'show_image'
    str_image1: 'resources/empty.jpg'
    str_image2: 'resources/empty.jpg'
    str_image3: 'resources/empty.jpg'
    str_image4: 'resources/empty.jpg'
    obj_image1: img1
    obj_image2: img2
    obj_image3: img3
    obj_image4: img4

    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2

        Image:
            id: img1
            source: root.str_image1
        Image:
            id: img2
            source: root.str_image2
        Image:
            id: img3
            source: root.str_image3
        Image:
            id: img4
            source: root.str_image4

