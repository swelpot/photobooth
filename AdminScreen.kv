<Separator@Widget>
    size_hint_y: None
    thickness: 2
    margin: 2
    height: self.thickness + 2 * self.margin
    color: 1., .0, .0
    canvas:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.width - 2 * self.margin , self.thickness

<ButtonBottom@Button>
    size_x: 200
    size_hint_y: 1

<ButtonRight@Button>
    size_hint_x: 1
    size_y: 20

<LabelRight@Label>
    size_hint_x: 1
    size_hint_y: .1
    text_size: self.size
    halign: 'left'

